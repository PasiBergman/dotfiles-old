[core]
  commentChar = ";"
  excludesfile = ~/.gitignore_global
  pager = delta
[user]
	email = pasi.bergman@hiq.fi
	name = Pasi Bergman
[pull]
  rebase = true
[color]
  ui = auto
[difftool "nvimdiff"]
  cmd = lvim -d \"$LOCAL\" \"$REMOTE\"
[diff]
  tool = nvimdiff
  guitool = nvimdiff
  colorMoved = default
[mergetool "nvimmerge"]
  cmd = nvim -d \"$LOCAL\" \"$MERGED\" \"$REMOTE\"
[mergetool]
	prompt = false
[merge]
	tool = vimdiff
  guitool = nvimmerge
	conflictStyle = diff3
[difftool]
	prompt = false
[rerere]
	enabled = true
	autoupdate = true
[init]
	defaultBranch = main
[mergetool "vimdiff"]
  path = lvim
#[include]
#  path = ~/.config/delta/themes.gitconfig
#[delta]
#  features = chameleon
#  navigate = true
  # features = zebra-dark
  # features = villsau
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[format]
	pretty = oneline
